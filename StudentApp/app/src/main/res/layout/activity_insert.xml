<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Insert">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insert"
            android:fontFamily="@font/font_new"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="26dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/id_tv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/border_edit_text"
            android:hint="Enter name of Student"
            android:fontFamily="@font/font_new"
            android:textColor="@color/black"
            android:inputType="text"
            />
            <EditText
                android:id="@+id/id_tv_rollNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:background="@drawable/border_edit_text"
                android:hint="Enter name of RollNumber"
                android:fontFamily="@font/font_new"
                android:textColor="@color/black"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/id_tv_class"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:background="@drawable/border_edit_text"
                android:hint="Enter name of Class"
                android:fontFamily="@font/font_new"
                android:textColor="@color/black"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/id_tv_tread"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:background="@drawable/border_edit_text"
                android:hint="Enter name of Tread (Stream)"
                android:fontFamily="@font/font_new"
                android:textColor="@color/black"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/id_tv_college"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:background="@drawable/border_edit_text"
                android:hint="Enter name of College"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font_new"
                android:textColor="@color/black"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/id_tv_marks"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:background="@drawable/border_edit_text"
                android:layout_marginTop="10dp"
                android:hint="Enter name of Marks(%)"
                android:fontFamily="@font/font_new"
                android:textColor="@color/black"
                android:inputType="numberDecimal"
                />

            <Button
                android:id="@+id/id_btn_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert Data"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>
            <Button
                android:id="@+id/id_btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Data"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
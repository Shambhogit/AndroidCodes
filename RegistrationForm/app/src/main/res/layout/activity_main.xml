<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_color"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="120dp"
        android:id="@+id/circle_two"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="55dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle"/>

    <TextView
        android:id="@+id/circle_one"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="270dp"
        android:background="@drawable/circle"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@drawable/blur_back"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/box">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/user"
                android:contentDescription="@string/name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:autofillHints="@string/name"
                android:background="@drawable/empty"
                android:hint="@string/name"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:fontFamily="@font/robo"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/email"
                android:contentDescription="@string/name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical
"               android:layout_marginStart="15dp"
                android:background="@drawable/empty"
                android:textColorHint="@color/white"
                android:hint="@string/email"
                android:inputType="text"
                android:fontFamily="@font/robo"
                android:autofillHints="@string/email" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/phone"
                android:contentDescription="@string/name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical
"               android:layout_marginStart="15dp"
                android:background="@drawable/empty"
                android:textColorHint="@color/white"
                android:hint="@string/phone"
                android:inputType="phone"
                android:fontFamily="@font/robo"
                android:autofillHints="@string/phone"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dateofbirth"
                android:contentDescription="@string/name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical
"               android:layout_marginStart="15dp"
                android:background="@drawable/empty"
                android:textColorHint="@color/white"
                android:hint="@string/birthday"
                android:inputType="date"
                android:fontFamily="@font/robo"
                android:autofillHints="@string/birthday"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/name"
                android:src="@drawable/password"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical
"               android:layout_marginStart="15dp"
                android:background="@drawable/empty"
                android:textColorHint="@color/white"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:fontFamily="@font/robo"
                android:autofillHints="@string/password"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/robo"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="650dp"
        android:background="@drawable/blur_back"
        android:text="@string/submit"
        android:textColor="@color/black"
        android:fontFamily="@font/robo"
        android:textStyle="bold"
        android:textSize="20sp"/>

</FrameLayout>